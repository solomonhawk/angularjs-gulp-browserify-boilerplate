{
  "serverport": 3000,
  "sass": {
    "src" : "./app/sass/**/*.scss",
    "dest": "./build/css"
  },
  "scripts": {
    "src" : "./app/javascripts/**/*.js",
    "dest": "./build/js"
  },
  "images": {
    "src" : "./app/images/**",
    "dest": "./build/images"
  },
  "views": {
    "src": [
      "./app/index.html",
      "./app/views/**/*.html"
    ],
    "dest": "./app/js"
  },
  "dist": {
    "root": "./build"
  },
  "browserify": {
    "entries"   : [ "/app/js/main.js" ],
    "bundleName": "main.js"
  }
}